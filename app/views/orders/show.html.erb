<h1>Thanks for your purchase</h1>

<div class="col-xs-6">
  <h3>Your Order Information</h3>
  <ul class="list-group">
    <li class="list-group-item">
      <%= @food_item.name %> x <%= @order.qty%>
      <span class="label label-default label-pill pull-right">VND <%= @food_item.price * @order.qty %></span>
    </li>
    <li class="list-group-item">
      Delivery Fee
      <span class="label label-primary label-pill pull-right">VND 20,000</span>
    </li>
    <li class="list-group-item">
      Total price
      <span class="label label-danger label-pill pull-right">VND <%= @food_item.price * @order.qty + 20000 %></span>
    </li>
  </ul>
</div>
<div class="col-xs-6">
  <h3>User Information</h3>
  <fieldset class="form-group">
      <label class="col-md-4">User name</label>
      <strong class="col-md-4"><%= @order.name %></strong>
  </fieldset>
  <fieldset class="form-group">
      <label class="col-md-4">Email</label>
      <strong class="col-md-4"><%= @order.email %></strong>
  </fieldset>
  <fieldset class="form-group">
      <label class="col-md-4">Address</label>
      <strong class="col-md-4"><%= @order.address %></strong>
  </fieldset>
  <fieldset class="form-group">
      <label class="col-md-4">Phone number</label>
      <strong class="col-md-4"><%= @order.phone %></strong>
  </fieldset>
  <fieldset class="form-group">
      <label class="col-md-4">Create Date</label>
      <strong class="col-md-4"><%= @order.created_at %></strong>
  </fieldset>
</div>

